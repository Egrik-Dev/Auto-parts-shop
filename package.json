{
  "homepage": "https://egrik-dev.github.io/Auto-parts-shop",
  "name": "auto-parts-shop",
  "version": "1.0.0",
  "private": true,
  "description": "Личный проект «Магазин Автозапчастей",
  "devDependencies": {
    "@htmlacademy/editorconfig-cli": "1.x",
    "autoprefixer": "9.7.x",
    "browser-sync": "2.26.x",
    "del": "5.1.0",
    "eslint": "6.8.0",
    "eslint-config-htmlacademy": "0.5.2",
    "gh-pages": "^3.1.0",
    "gulp": "4.0.x",
    "gulp-csso": "4.0.1",
    "gulp-imagemin": "7.1.0",
    "gulp-plumber": "1.2.x",
    "gulp-postcss": "8.0.x",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.0.x",
    "gulp-sourcemaps": "2.6.x",
    "gulp-svgstore": "^7.0.1",
    "gulp-webp": "^4.0.1",
    "stylelint": "13.2.x"
  },
  "dependencies": {},
  "scripts": {
    "editorconfig": "editorconfig-cli",
    "stylelint": "stylelint \"source/sass/**/*.scss\" --syntax scss",
    "eslint": "eslint source/**/*.js",
    "test": "npm run editorconfig && npm run stylelint && npm run eslint",
    "testjs": "npm run eslint",
    "build": "gulp build",
    "start": "gulp start",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "browserslist": [
    "last 2 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "editorconfig-cli": [
    "*.json",
    "*.js",
    "source/*.html",
    "source/js/**/*.js",
